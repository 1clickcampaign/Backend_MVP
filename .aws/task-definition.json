{
    "family": "fastapi-backend",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
      {
        "name": "fastapi-backend",
        "image": "058264339376.dkr.ecr.us-east-2.amazonaws.com/datapull/fastapi-backend:latest",
        "portMappings": [
          {
            "containerPort": 8000,
            "hostPort": 8000,
            "protocol": "tcp"
          }
        ],
        "secrets": [
          {
            "name": "SUPABASE_URL",
            "valueFrom": "arn:aws:ssm:us-east-2:058264339376:parameter/fastapi-backend/SUPABASE_URL"
          },
          {
            "name": "SUPABASE_KEY",
            "valueFrom": "arn:aws:secretsmanager:us-east-2:058264339376:secret:fastapi-backend/SUPABASE_KEY"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/fastapi-backend",
            "awslogs-region": "us-east-2",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "executionRoleArn": "arn:aws:iam::058264339376:role/ecsTaskExecutionRole"
}
